---
import ButtonStyled from '@modrinth/ui/src/components/base/ButtonStyled.vue';
import Button from '@modrinth/ui/src/components/base/Button.vue';

const links = [
    {
        to: "/wiki",
        text: "Wiki"
    },
    {
        to: "/wiki/projects/minecraft-server",
        text: "Minecraft Server"
    },
    {
        to: "/wiki/projects",
        text: "Projects"
    },
    {
        to: "/wiki/other/contribute",
        text: "Contribute"
    }
]

---

<header>
    <div class="nav-buttons">
        <ButtonStyled>
            <Button link="/">Home</Button>
        </ButtonStyled>
        {links.map((link) => (
            <ButtonStyled>
                <Button link={link.to}>{link.text}</Button>
            </ButtonStyled>
        ))}
    </div>
</header>

<style>
header {
    margin: 16px;
    height: 40px;            /* Set the header height */
    display: flex;           /* Use flexbox for vertical alignment */
    align-items: center;     /* Center the buttons vertically */
    justify-content: center; /* Center-align buttons horizontally */
}

.nav-buttons {
    display: flex;           /* Align buttons horizontally */
    gap: 1rem;               /* Optional: Add space between buttons */
    justify-content: center; /* Center-align buttons horizontally */
    flex-wrap: nowrap;       /* Prevent wrapping of buttons */
}
</style>
